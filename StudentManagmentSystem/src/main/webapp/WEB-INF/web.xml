<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>StudentManagmentSyste</display-name>
  <welcome-file-list>
    <welcome-file>/pages/Loginpage.jsp</welcome-file>
  </welcome-file-list>
  
  <servlet>
   <servlet-name>resister_student</servlet-name>
    <servlet-class>com.softronic.student.controller.SaveController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>resister_student</servlet-name>
    <url-pattern>/resisterstudents</url-pattern>
  </servlet-mapping>
  
  
  <servlet>
   <servlet-name>Fetch_student</servlet-name>
    <servlet-class>com.softronic.student.controller.ListStudentDetailsController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Fetch_student</servlet-name>
    <url-pattern>/Fetchstudent</url-pattern>
  </servlet-mapping>
  
  
  <servlet>
   <servlet-name>fetch_single_student_details</servlet-name>
    <servlet-class>com.softronic.student.controller.StudentDetailsController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>fetch_single_student_details</servlet-name>
    <url-pattern>/fetch_single_studentdetails</url-pattern>
  </servlet-mapping>
  
  <servlet>
   <servlet-name>update_student</servlet-name>
    <servlet-class>com.softronic.student.controller.UpdateController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>update_student</servlet-name>
    <url-pattern>/updatestudent</url-pattern>
  </servlet-mapping>
  
  
  <servlet>
   <servlet-name>loginpage</servlet-name>
    <servlet-class>com.softronic.student.controller.Loginpagecontroller</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>loginpage</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  
  
   <servlet>
   <servlet-name>Openlogincontroller</servlet-name>
    <servlet-class>com.softronic.student.controller.OPenResisterControler</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Openlogincontroller</servlet-name>
    <url-pattern>/opencotroller</url-pattern>
  </servlet-mapping>
  
</web-app>